int main()
{
    int n;
    scanf("%d",&n);
    for(int i=1;i<=n;i++)
    {
        for (int j=1;j<=n;j++)//j=1;j<=n-i;j++
        {
            if (j<=n-i)//j<i//printf(" ");
            {
                printf(" ");
            }else{printf("*");}
        }
        //for (int j=1;j<=2*i-1;j++)
        //printf("*")
        printf("\n");
    }
}
